rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to validate My Circle updates
    function validateMyCircleUpdate(oldData, newData) {
      return !('myCircle' in oldData) || (oldData.myCircle.code == newData.myCircle.code);
    }

    // Users can read/write only their own profile
    match /users/{userId} {
      // Users can read and update their own document
      allow read: if request.auth != null && request.auth.uid == userId;

      // Users can write to their own document BUT with restrictions
      allow update: if request.auth != null &&
                       request.auth.uid == userId &&
                       (
                         // Allow metrics-only updates (for tracking)
                         (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['metrics'])) ||
                         // OR allow general updates with earnings/code restrictions
                         ((!('myCircle' in request.resource.data) || !('earnings' in request.resource.data.myCircle)) &&
                          validateMyCircleUpdate(resource.data, request.resource.data))
                       );

      // Allow create for initial user document
      allow create: if request.auth != null && request.auth.uid == userId;

      // Allow list queries for:
      // 1. Referral code uniqueness checking (limit 1, 1 filter)
      // 2. Email search for recipe sharing (limit <= 10)
      allow list: if request.auth != null &&
                     request.query.limit <= 10;
    }

    // Recipe access rules
    match /recipes/{recipeId} {
      // Users can create their own recipes
      // OR create recipes for others when sharing (must have sharedFrom field with creator's ID)
      allow create: if request.auth != null &&
                       (request.resource.data.userId == request.auth.uid ||
                        ('sharedFrom' in request.resource.data &&
                         request.resource.data.sharedFrom.userId == request.auth.uid));

      // Users can read, update, delete only their own recipes
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can create variations only if:
    // - They own the variation
    // - They own the linked recipe
    match /variations/{variationId} {
      allow create, update, delete: if request.auth != null &&
        request.resource.data.userId == request.auth.uid &&
        get(/databases/$(database)/documents/recipes/$(request.resource.data.recipeId)).data.userId == request.auth.uid;

      allow read: if request.auth != null &&
        (resource.data.userId == request.auth.uid ||
         get(/databases/$(database)/documents/recipes/$(resource.data.recipeId)).data.userId == request.auth.uid);
    }

    // Optional: allow all authenticated users to read shared starter recipes
    match /starterRecipes/{docId} {
      allow read: if request.auth != null;
    }

    // Optional: allow all authenticated users to read ingredient options
    match /ingredients/{ingredientId} {
      allow read: if request.auth != null;
    }

    // Meal plans - users can only access their own meal plans
    match /mealPlans/{mealPlanId} {
      // Allow create only if the userId in the document matches the authenticated user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow read, update, delete only if the user owns the meal plan
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Shopping lists - users can only access their own shopping lists
    match /shoppingLists/{shoppingListId} {
      // Allow create only if the userId in the document matches the authenticated user
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // Allow read, update, delete only if the user owns the shopping list
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Diet types - allow all authenticated users to read
    match /dietTypes/{dietTypeId} {
      allow read: if request.auth != null;
    }

    // Referrals - for My Circle feature
    match /referrals/{referralId} {
      // Allow creating referral records (system-generated only)
      allow create: if request.auth != null &&
                       request.resource.data.referrerId is string &&
                       request.resource.data.referredUserId is string &&
                       request.resource.data.status in ['pending', 'active', 'rewarded'] &&
                       request.resource.data.level in [1, 2];

      // Allow reading specific referral if user is involved
      allow read: if request.auth != null &&
                     (resource.data.referrerId == request.auth.uid ||
                      resource.data.referredUserId == request.auth.uid);

      // Restricted list query ONLY for user's own referrals
      // Must filter by referrerId AND limit results
      allow list: if request.auth != null &&
                     request.query.limit <= 100 &&
                     request.query.filters.size() >= 1;
    }

    // Product Cache - global cache accessible by all authenticated users
    match /productCache/{cacheKey} {
      // Allow all authenticated users to read from cache
      allow read: if request.auth != null;

      // Allow all authenticated users to write to cache
      allow create, update: if request.auth != null;

      // Allow cache cleanup (delete old entries)
      allow delete: if request.auth != null;
    }

    // User Product Cache - user-specific product cache
    match /userProductCache/{cacheId} {
      // Allow users to read/write only their own cache entries
      // Cache ID format: userId_barcode
      allow read, create, update, delete: if request.auth != null &&
                                             request.auth.uid == request.resource.data.userId;

      // Allow reading existing cache if user owns it
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // User Product Preferences - user-specific preferences
    match /userProductPreferences/{userId} {
      // Users can read and write only their own preferences
      allow read, create, update: if request.auth != null && request.auth.uid == userId;

      // Allow delete for cleanup
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
